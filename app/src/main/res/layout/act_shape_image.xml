<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <com.xiaoli.library.View.TitleBarLayout
        android:id="@+id/mTitleBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleBarTitle="@string/shape_image_label"
        app:titleBarBackgroundLeft="@drawable/shape_login_btn"
        />
    <TextView
        android:id="@+id/mTvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="https://github.com/siyamed/android-shape-imageview"/>

    <com.github.siyamed.shapeimageview.CircularImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/android_logo"
        android:layout_gravity="center_horizontal"
        app:siBorderWidth="6dp"
        app:siBorderColor="@color/gray"/>

    <com.github.siyamed.shapeimageview.BubbleImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/android_logo"
        android:layout_gravity="center_horizontal"
        app:siArrowPosition="right"
        app:siSquare="true"/>

    <com.github.siyamed.shapeimageview.RoundedImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/android_logo"
        android:layout_gravity="center_horizontal"
        app:siRadius="6dp"
        app:siBorderWidth="6dp"
        app:siBorderColor="@color/gray"
        app:siSquare="true"/>


</LinearLayout>
</ScrollView>
