<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <TextView
        android:id="@+id/mTvDemo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/demo"/>
    <com.xiaoli.library.View.PullToRefreshListView
        android:id="@+id/mPullListView"
        android:layout_below="@id/mTvDemo"
        android:cacheColorHint="@color/color_transparent"
        android:divider="@drawable/bottom_line_gray"
        android:dividerHeight="2dp"
        android:layout_width="fill_parent"
        android:scrollbars="vertical"
        android:layout_height="wrap_content"
        />

</RelativeLayout>
