<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xiaolidemo">

    <application
        android:name=".BaseApp"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <service android:name="com.xiaoli.library.task.PollingService">

        </service>
        <activity android:name="com.xiaoli.library.ui.NullActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".ui.common.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".ui.common.GuideActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".ui.common.LoginActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".ui.DemoActivity"
            android:label="@string/demo"
            android:screenOrientation="portrait">
        </activity>


    </application>

</manifest>
